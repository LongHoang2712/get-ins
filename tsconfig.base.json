{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@org/lib//common-ui": ["lib/common-ui/src/index.js"],
      "@org/lib//common-ui/server": ["lib/common-ui/src/server.js"],
      "@org/lib/common-validate": ["lib/common-validate/src/index.js"],
      "@org/lib/common-validate/server": ["lib/common-validate/src/server.js"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
